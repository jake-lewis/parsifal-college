<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="studentPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.StudentController">
   <center>
      <TableView fx:id="table" prefHeight="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="Forename" prefWidth="75.0" text="Forename" />
          <TableColumn fx:id="Surname" prefWidth="75.0" text="Surname" />
          <TableColumn fx:id="Mobile" prefWidth="100.0" text="Mobile" />
        </columns>
      </TableView>
   </center>
   <right>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="create" mnemonicParsing="false" onAction="#handleNewStudent" text="Create Student" />
            <Button mnemonicParsing="false" onAction="#handleEditStudent" text="Edit Student" />
            <Button mnemonicParsing="false" onAction="#handleDeletePerson" text="Delete Student" />
         </children>
      </VBox>
   </right>
</BorderPane>
